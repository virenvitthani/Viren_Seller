<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#FF071C">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/clothes_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:background="#2196F3"
                android:layout_weight="0.5"
                android:src="@drawable/clothes" />

            <TextView
                android:id="@+id/clothes_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clothes"
                android:textSize="20dp"
                android:textColor="#0B28E4"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/toys_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:src="@drawable/toys"
                android:background="#2196F3"
                android:layout_marginVertical="10dp"/>

            <TextView
                android:id="@+id/toys_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Toys"
                android:textSize="20dp"
                android:textColor="#0B28E4"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/shoes_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:layout_weight="0.5"
                android:background="#2196F3"
                android:src="@drawable/shoes" />

            <TextView
                android:id="@+id/shoes_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Shoes"
                android:textSize="20dp"
                android:textColor="#0B28E4"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mobiles_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:src="@drawable/mobiles"
                android:background="#2196F3"
                android:layout_marginVertical="10dp"/>

            <TextView
                android:id="@+id/mobiles_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobiles"
                android:layout_marginBottom="5dp"
                android:textSize="20dp"
                android:textColor="#0B28E4"
                android:textStyle="bold"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
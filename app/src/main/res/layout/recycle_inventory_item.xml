<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="#FFB300"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/inven_recyc_img"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@mipmap/ic_launcher"
                android:layout_margin="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/inven_recyc_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Name :"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/inven_recyc_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PDPrice : "
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"/>

            <TextView
                android:id="@+id/inven_recyc_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PDDescription : "
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.4"
            android:gravity="end">

            <ImageView
                android:id="@+id/inven_recyc_menuoption"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_more_vert_24"
                android:scaleX="2"
                android:scaleY="2"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>